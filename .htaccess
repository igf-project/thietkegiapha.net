RewriteEngine On
RewriteRule ^/?$ 								  index.php
RewriteRule ^trang-chu/?$ 						  index.php
RewriteRule ^admincp/?$ 						  admincp/index.php
RewriteRule ^tin-tuc/?$ 						  index.php?com=contents [QSA]
RewriteRule ^lien-he/?$ 						  index.php?com=contact
RewriteRule ^tim-kiem/?$ 	                      index.php?com=search
RewriteRule ^mau-pha-do/?$ 	                      index.php?com=gallery [QSA]


RewriteRule ^mau-pha-do/([0-9a-zA-Z\-]+)?$ 	  	  index.php?com=gallery&viewtype=detail&code=$1
